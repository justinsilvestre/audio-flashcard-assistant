{
  "name": "knowclip",
  "productName": "Knowclip",
  "version": "0.7.22-beta",
  "private": true,
  "engines": {
    "node": "^12.4.0"
  },
  "author": {
    "name": "Justin Silvestre",
    "email": "justinsilvestre@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/knowclip/knowclip.git"
  },
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^4.5.1",
    "@sentry/electron": "^1.3.0",
    "@silvestre/mkanki": "^3.0.1",
    "@types/react-virtualized": "^9.21.8",
    "@types/request": "^2.48.5",
    "ajv": "^6.11.0",
    "asar": "0.14.3",
    "better-ajv-errors": "^0.6.7",
    "better-sqlite3": "^5.4.3",
    "chromedriver": "^85.0.1",
    "dataurl": "^0.1.0",
    "electron-chromedriver": "^10.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-store": "^5.1.0",
    "ffmpeg-static": "^2.4.0",
    "ffprobe-static": "^3.0.0",
    "filenamify": "^4.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^8.1.0",
    "material-ui-chip-input": "^1.0.0-beta.14",
    "moment": "^2.24.0",
    "normalizr": "^3.5.0",
    "papaparse": "^4.5.0",
    "react": "^16.8.4",
    "react-autosuggest": "^9.4.3",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-hot-loader": "^4.8.0",
    "react-redux": "^7.1.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-virtualized": "^9.21.2",
    "redux": "^4.0.0",
    "redux-observable": "^1.0.0",
    "redux-persist": "^6.0.0",
    "redux-persist-electron-storage": "^2.1.0",
    "reselect": "^3.0.1",
    "rxjs": "^6.2.2",
    "semver": "^7.1.2",
    "subsrt": "^1.0.0",
    "subtitle": "^2.0.3",
    "tempy": "^0.3.0",
    "ts-json-schema-generator": "^0.58.1",
    "uuid": "^3.3.2",
    "webdriverio": "^6.5.2",
    "xss": "^1.0.6",
    "yaml": "^1.7.2"
  },
  "main": "./build-main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "postinstall": "electron-builder install-app-deps",
    "start:integration": "REACT_APP_SPECTRON=true yarn start",
    "build": "yarn build-schemas && REACT_APP_BUILD_NUMBER=$TRAVIS_BUILD_NUMBER react-scripts build",
    "build:main": "yarn tsc ./electron/main.ts --outDir ./build-main",
    "build:ci": "CI=false && yarn build:main && yarn build",
    "build:appveyor": "yarn build:main && react-scripts build",
    "test": "react-scripts test --env=jsdom ./src --testPathIgnorePatterns=./src/test",
    "integration": "REACT_APP_SPECTRON=true yarn build:ci && react-scripts test ./src/test/ --watchAll=false  --runInBand",
    "integration:appveyor": "react-scripts test ./src/test/ --watchAll=false  --runInBand",
    "integration:skip-build": "REACT_APP_SPECTRON=true react-scripts test ./src/test/ --watchAll=false --runInBand",
    "integration:new": "REACT_APP_INTEGRATION=true react-scripts test ./src/test/new/ --watchAll=false --runInBand",
    "integration:debug": "INTEGRATION_DEV=true yarn integration:skip-build --verbose",
    "build-fixture:saved": "yarn integration:build-fixture -t \"testing saved projects\"",
    "build-fixture:shared": "yarn integration:build-fixture -t \"shared project\" && rm -rf src/test/assets/generated/sharedProject sharedProject_persistedDataSnapshot.js && echo 'removed generated files'",
    "build-fixture:subtitles": "yarn integration:build-fixture -t \"from subtitles\"",
    "integration:build-fixture": "INTEGRATION_DEV=true REACT_APP_SPECTRON=true BUILDING_FIXTURES=true react-scripts test ./src/test/ --testMatch=**/*.fixture.{js,jsx,ts,tsx} --watchAll=false --runInBand",
    "eject": "react-scripts eject",
    "electron": "export NODE_ENV=development && yarn build:main && electron .",
    "lint": "eslint src/**/*.{ts,tsx,js}",
    "format": "prettier --ignore-path ./.gitignore \"{src/**,.}/*.{js,ts,tsx}\"",
    "format:write": "yarn format --write",
    "tsc": "tsc",
    "build-schemas": "yarn build-schema:project && yarn build-schema:media",
    "build-schema:project": "yarn build-schema --out ./src/utils/validateProjectMetadata.json --type \\ProjectMetadataJson ",
    "build-schema:media": "yarn build-schema --out ./src/utils/validateProjectMedia.json --type \\$MediaJson",
    "build-schema": "ts-json-schema-generator --path ./src/types/Project.ts --tsconfig ./tsconfig.json",
    "tidy": "yarn format --list-different && yarn lint && yarn tsc",
    "electron-builder": "electron-builder",
    "electron-builder:skip-publish": "electron-builder -p never",
    "dist": "yarn build:ci && yarn electron-builder:skip-publish",
    "dist:appveyor": "yarn build:appveyor && yarn electron-builder"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tidy",
      "post-commit": "git diff",
      "post-push": "echo '############ BUILDING JSON SCHEMAS JUST IN CASE! ###############' && yarn build-schemas"
    }
  },
  "browserslist": [
    "electron >= 10.1.2"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/classnames": "^2.2.9",
    "@types/fluent-ffmpeg": "^2.1.11",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/papaparse": "^5.0.1",
    "@types/react": "^16.9.5",
    "@types/react-autosuggest": "^9.3.13",
    "@types/react-dom": "^16.9.1",
    "@types/react-redux": "^7.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/reselect": "^2.2.0",
    "@types/semver": "^7.1.0",
    "@types/subtitle": "^2.0.2",
    "@types/uuid": "^3.4.5",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.2.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^1.1.3",
    "prettier": "1.15.3",
    "silvestre-afa-react-scripts": "3.4.1-0",
    "typescript": "^3.6.3"
  },
  "build": {
    "appId": "com.electron.knowclip",
    "asar": true,
    "productName": "Knowclip",
    "copyright": "Copyright 2020 Justin Silvestre",
    "files": [
      "./build",
      "./icons",
      "./build-main",
      "./electron"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "./icons/icon.ico",
      "artifactName": "${productName}_${version}_${os}_${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education",
      "artifactName": "${productName}_${version}_${os}.${ext}"
    },
    "mac": {
      "target": [
        "default"
      ],
      "identity": null,
      "category": "public.app-category.education",
      "icon": "./icons/icon.icns",
      "artifactName": "${productName}_${version}_${os}.${ext}"
    }
  }
}
